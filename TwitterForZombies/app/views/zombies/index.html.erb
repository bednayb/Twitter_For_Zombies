<p id="notice"><%= notice %></p>

<h1>Zombies</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Bio</th>
      <th>Age</th>
      <th>Rotting</th>

      <th>Brain's flavor</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @zombies.each do |zombie| %>
      <tr>
        <td><%= zombie.name %></td>
        <td><%= zombie.bio %></td>
        <td><%= zombie.age %></td>
        <td><%= zombie.rotting %></td>



        <!--select-- same as zombies_path(@zombie)>!-->
        <td><%= link_to 'Show', zombie %></td>

        <!--update-- /zombie/zombie_id/edit> -->
        <td><%= link_to 'Edit', edit_zombie_path(zombie) %></td>
        <!--delete-->
        <td><%= link_to 'Destroy', zombie, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

