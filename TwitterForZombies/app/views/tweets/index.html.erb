<p id="notice"><%= notice %></p>

<h1>Tweets</h1>

<table>
  <thead>
    <tr>
      <th>Status</th>
      <th>tweet_id</th>
      <th>Zombie_id</th>
      <th colspan="3"></th>
    </tr>
  </thead>
</table>

<% @tweets.each do |tweet| %>
    <%= div_for tweet do %>
        <%= render tweet %>
    <% end %>
<% end %>

<br>
<%= form_for(Tweet.new, :url=>zombie_tweets_path(@zombie), :method=>'post', remote: true) do |f| %>

    <div class="field">
      <%= f.label :status %><br />
      <%= f.text_field :status %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>

<%= link_to 'Back to profile', zombie_path(@zombie) %>
<br>
<%= link_to 'Back to zombies', zombies_path %>