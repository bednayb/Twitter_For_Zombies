<p id="notice"><%= notice %></p>

<h1>Tweets</h1>

<table>
  <thead>
    <tr>
      <th>Status</th>
      <th>tweet_id</th>
      <th>Zombie_id</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tweets.each do |tweet| %>
      <tr>
      <%= div_for tweet do %>


        <td><%= tweet.status %></td>
        <td><%= tweet.id %></td>
        <td><%= tweet.zombie_id %></td>
        <td><%= link_to 'Show', zombie_tweet_path(@zombie,tweet) %></td>
        <td><%= link_to 'Edit', edit_zombie_tweet_path(@zombie,tweet) %></td>
        <td><%= link_to 'Destroy', zombie_tweet_path(@zombie,tweet), method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
            </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Tweet', new_zombie_tweet_path(@zombie) %>
